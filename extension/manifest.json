{
  "manifest_version": 2,
  "name": "Thunderbird MCP",
  "version": "1.0",
  "description": "MCP server for AI agents to access email, contacts, and calendars",
  "browser_specific_settings": {
    "gecko": {
      "id": "thunderbird-mcp@openclaw.dev",
      "strict_min_version": "102.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "experiment_apis": {
    "mcpServer": {
      "schema": "server/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["mcpServer"]],
        "script": "server/api.js"
      }
    },
    "searchIndex": {
      "schema": "search_index/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "searchIndex"]],
        "script": "search_index/api.mjs",
        "events": ["startup"]
      }
    },
    "messagesMcp": {
      "schema": "messages/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "messagesMcp"]],
        "script": "messages/api.mjs",
        "events": ["startup"]
      }
    },
    "composeMcp": {
      "schema": "compose/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "composeMcp"]],
        "script": "compose/api.mjs",
        "events": ["startup"]
      }
    },
    "calendarMcp": {
      "schema": "calendar/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "calendarMcp"]],
        "script": "calendar/api.mjs",
        "events": ["startup"]
      }
    },
    "contactsMcp": {
      "schema": "contacts/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["messenger", "contactsMcp"]],
        "script": "contacts/api.mjs",
        "events": ["startup"]
      }
    }
  },
  "permissions": [
    "accountsRead",
    "addressBooks",
    "messagesRead",
    "messagesMove",
    "messagesDelete",
    "accountsFolders",
    "compose",
    "compose.send"
  ],
  "web_accessible_resources": [
    "httpd.sys.mjs"
  ]
}
