{
  "manifest_version": 2,
  "name": "Thunderbird MCP",
  "version": "1.0",
  "description": "MCP server for AI agents to access email, contacts, and calendars",
  "browser_specific_settings": {
    "gecko": {
      "id": "thunderbird-mcp@openclaw.dev",
      "strict_min_version": "102.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "experiment_apis": {
    "mcpServer": {
      "schema": "server/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["mcpServer"]],
        "script": "server/api.js"
      }
    }
  },
  "permissions": [
    "accountsRead",
    "addressBooks",
    "messagesRead",
    "messagesMove",
    "messagesDelete",
    "accountsFolders",
    "compose",
    "compose.send"
  ],
  "web_accessible_resources": [
    "httpd.sys.mjs"
  ]
}
